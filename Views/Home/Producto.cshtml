@model Producto

@{
    ViewData["Title"] = "Registro Solicitud";
}

<div class="col-3">
    <div class="text-left">
        <h1 class="">Registrar una nueva solicitud </h1>
    </div>
</div>

<form asp-action="Producto" class="form-container" method="POST">
    <div asp-validation-summary="All"></div>

    <div class="col-6">

        <div class="form-group">
            <label asp-for="Nombre"></label>
            <input asp-for="Nombre" class="form-control" required>
        </div>

        <div class="form-group">
            <label asp-for="Foto"></label>
            <input type="file" asp-for="Foto" class="form-control" required/>
        </div>

        <div class="form-group">
            <label asp-for="Descripcion"></label>
            <input asp-for="Descripcion" class="form-control" required>
        </div>

        <div class="form-group">
            <label asp-for="Precio"></label>
            <input asp-for="Precio" class="form-control" required>
        </div>

        <div class="form-group">
            <label asp-for="Celular"></label>
            <input asp-for="Celular" class="form-control" required>
        </div>

        <div class="form-group">
            <label asp-for="Lugar"></label>
            <input asp-for="Lugar" class="form-control" required>
        </div>

        <div class="form-group">
            <label asp-for="Usuario"></label>
            <input asp-for="Usuario" class="form-control" required>
        </div>


        <div class="form-group">
            <label for="Categoria">Categoria</label>
        </div>


        <button class="btn btn-block btn-info">Registrar</button>

    </div>

</form>
